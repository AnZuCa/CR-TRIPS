<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CR-TRIPSPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>logica.modelo.Tarjeta</class>
    <class>logica.modelo.TourReserva</class>
    <class>logica.modelo.Respuesta</class>
    <class>logica.modelo.TicketTour</class>
    <class>logica.modelo.Comentario</class>
    <class>logica.modelo.Categoria</class>
    <class>logica.modelo.Foto</class>
    <class>logica.modelo.Recomendacion</class>
    <class>logica.modelo.Tour</class>
    <class>logica.modelo.TipoTicket</class>
    <class>logica.modelo.Incluye</class>
    <class>logica.modelo.Pregunta</class>
    <class>logica.modelo.Usuario</class>
    <class>logica.modelo.Salida</class>
    <class>logica.modelo.Reserva</class>
    <class>logica.modelo.Telefono</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/CR_TRIPS?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
